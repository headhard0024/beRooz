<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="left">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/navigation_bg"
        tools:ignore="RtlHardcoded">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/_4dp"
                android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/circle_white_80"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@drawable/circle_white_60"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/circle_white_40"
                                android:gravity="center">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/mtrl_card_checked_layer_id"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorAccent"
                                        android:elevation="2dp"
                                        app:cardCornerRadius="100dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        tools:ignore="MissingConstraints">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:id="@+id/imgUserImage"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:src="@drawable/ic_baseline_person"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                tools:ignore="MissingConstraints" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <LinearLayout
                                        android:id="@+id/laySelectImage"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:background="@drawable/circle_color_accent"
                                        android:elevation="2dp"
                                        android:gravity="center"
                                        app:layout_constraintBottom_toBottomOf="@+id/mtrl_card_checked_layer_id"
                                        app:layout_constraintEnd_toEndOf="@+id/mtrl_card_checked_layer_id"
                                        tools:ignore="MissingConstraints">

                                        <ImageView
                                            android:id="@+id/imgChooseImage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_baseline_edit"
                                            android:fontFamily="@font/iranyekanmobilemedium"
                                            android:gravity="center"
                                            android:padding="@dimen/_8dp"
                                            android:textColor="@color/white" />
                                    </LinearLayout>

                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_margin="@dimen/_4dp"-->
<!--                    android:textSize="@dimen/_16sp"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:gravity="center"-->
<!--                    android:singleLine="true"-->
<!--                    android:fontFamily="@font/iranyekanmobilebold"-->
<!--                    android:text="اسمت چیه ؟"-->
<!--                    android:layout_height="wrap_content"/>-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layOther"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_margin="@dimen/_4dp"
                        android:padding="@dimen/_4dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_baseline_android"
                            android:layout_height="@dimen/_120dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="دیگه چی ؟"
                            android:fontFamily="@font/iranyekanmobilemedium"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:textSize="@dimen/_14sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_margin="@dimen/_4dp"
                        android:padding="@dimen/_4dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_baseline_bookmark"
                            android:layout_height="@dimen/_120dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="نشانه شده ها"
                            android:fontFamily="@font/iranyekanmobilemedium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layScore"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_margin="@dimen/_4dp"
                        android:padding="@dimen/_4dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_baseline_star"
                            android:layout_height="@dimen/_120dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="نظرت خیلی مهمه"
                            android:fontFamily="@font/iranyekanmobilemedium"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:textSize="@dimen/_14sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layCall"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_margin="@dimen/_4dp"
                        android:padding="@dimen/_4dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_baseline_call"
                            android:layout_height="@dimen/_120dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="تماس با ما"
                            android:fontFamily="@font/iranyekanmobilemedium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_margin="@dimen/_4dp"
                        android:padding="@dimen/_4dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_baseline_settings"
                            android:layout_height="@dimen/_120dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="تنظیمات"
                            android:fontFamily="@font/iranyekanmobilemedium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_margin="@dimen/_4dp"
                        android:padding="@dimen/_4dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_baseline_more_horiz"
                            android:layout_height="@dimen/_120dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="بیشتر"
                            android:fontFamily="@font/iranyekanmobilemedium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </com.google.android.material.navigation.NavigationView>

</LinearLayout>