<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rootScrollView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.activity.ActivityShowDetails"
    tools:showIn="@layout/activity_show_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="عنوان خبر"
            android:minHeight="130dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sp"
            android:fontFamily="@font/iranyekanmobilebold"
            android:background="@color/colorAccent"
            android:gravity="bottom|right"
            android:padding="@dimen/_8dp"
            android:lineSpacingExtra="@dimen/_4sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:textDirection="rtl"
            android:text="مشروح"
            android:textColor="@color/black"
            android:lineSpacingExtra="@dimen/_8sp"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:layout_margin="@dimen/_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>